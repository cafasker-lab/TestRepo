import { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Plus, Trash2, MessageSquare } from "lucide-react";
import { format } from "date-fns";

const noteTypeColors = {
  meeting: "bg-purple-50 text-purple-700 border-purple-200",
  call: "bg-blue-50 text-blue-700 border-blue-200",
  general: "bg-gray-50 text-gray-700 border-gray-200"
};

export default function NotesSection({ clientId, notes }) {
  const queryClient = useQueryClient();
  const [showForm, setShowForm] = useState(false);
  const [newNote, setNewNote] = useState({ content: "", note_type: "general" });

  const createNoteMutation = useMutation({
    mutationFn: (data) => base44.entities.Note.create({ ...data, client_id: clientId }),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['notes', clientId] });
      setNewNote({ content: "", note_type: "general" });
      setShowForm(false);
    },
  });

  const deleteNoteMutation = useMutation({
    mutationFn: (id) => base44.entities.Note.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['notes', clientId] });
    },
  });

  return (
    <div className="bg-white rounded-lg border border-gray-200 p-6">
      <div className="flex items-center justify-between mb-6">
        <div className="flex items-center gap-3">
          <MessageSquare className="w-5 h-5 text-gray-400" />
          <h2 className="text-xl font-semibold text-gray-900">Notes</h2>
        </div>
        <Button
          onClick={() => setShowForm(!showForm)}
          variant="outline"
        >
          <Plus className="w-4 h-4 mr-2" />
          {showForm ? "Cancel" : "Add Note"}
        </Button>
      </div>

      {showForm && (
        <div className="bg-gray-50 rounded-lg p-4 mb-6">
          <div className="space-y-4">
            <div>
              <label className="text-sm font-medium mb-2 block">Note Type</label>
              <Select
                value={newNote.note_type}
                onValueChange={(value) => setNewNote({...newNote, note_type: value})}
              >
                <SelectTrigger>
                  <SelectValue />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="general">General Note</SelectItem>
                  <SelectItem value="meeting">Meeting</SelectItem>
                  <SelectItem value="call">Call Summary</SelectItem>
                </SelectContent>
              </Select>
            </div>

            <div>
              <label className="text-sm font-medium mb-2 block">Content</label>
              <Textarea
                value={newNote.content}
                onChange={(e) => setNewNote({...newNote, content: e.target.value})}
                placeholder="Write your note here..."
                className="min-h-32"
              />
            </div>

            <Button
              onClick={() => createNoteMutation.mutate(newNote)}
              disabled={!newNote.content.trim() || createNoteMutation.isPending}
              className="w-full bg-gray-900 hover:bg-gray-800"
            >
              {createNoteMutation.isPending ? "Saving..." : "Save Note"}
            </Button>
          </div>
        </div>
      )}

      <div className="space-y-3">
        {notes.length === 0 ? (
          <div className="border-2 border-dashed border-gray-200 rounded-lg p-8 text-center">
            <p className="text-sm text-gray-400">No notes yet</p>
          </div>
        ) : (
          notes.map((note) => (
            <div
              key={note.id}
              className="bg-gray-50 rounded-lg p-4"
            >
              <div className="flex items-start justify-between mb-2">
                <div className={`inline-flex items-center px-2.5 py-0.5 rounded text-xs font-medium border ${noteTypeColors[note.note_type]}`}>
                  {note.note_type.charAt(0).toUpperCase() + note.note_type.slice(1)}
                </div>
                <div className="flex items-center gap-3">
                  <span className="text-xs text-gray-500">
                    {format(new Date(note.created_date), "MMM d, yyyy 'at' h:mm a")}
                  </span>
                  <Button
                    onClick={() => {
                      if (confirm("Delete this note?")) {
                        deleteNoteMutation.mutate(note.id);
                      }
                    }}
                    size="sm"
                    variant="ghost"
                  >
                    <Trash2 className="w-4 h-4" />
                  </Button>
                </div>
              </div>
              <p className="text-sm text-gray-700 whitespace-pre-wrap">{note.content}</p>
            </div>
          ))
        )}
      </div>
    </div>
  );
}
